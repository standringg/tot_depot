<% provide(:title, 'Shop') %>

<div class="center row">
  <fieldset>
    <div class="small-12 large-12 columns">
      <div class="center row">
        <div class="small-12 large-12 columns">
          <h22>Tour of Tauranga Catalogue</h22>
          <br>
          <br>
          <% cache ['store', Product.latest] do %>
          <% @products.each do |product| %>
          <% cache ['entry', product] do %>
          <div class="entry">
            <table>
              <tr>
                <td width="25%">
                  <%= image_tag(product.image_url) %>
                <td/>
                <td>
                  <h19><%= product.title %></h19>
                  <br>
                  <br>
                  <%= sanitize(product.description) %>
                </td>
                <td width="15%">
                  <right><%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true, class: "button small radius" %></right>
                  <br>
                  <h8><div class="price_line"><span class="price"><%= number_to_currency(product.price) %></span></h8>
                </td>
              </tr>
            </table>
          </div>
          <% end %>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </fieldset>
</div>
   

   
