<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>F name</th>
      <th>L name</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>Town city</th>
      <th>Post code</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Pay type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.f_name %></td>
        <td><%= order.l_name %></td>
        <td><%= order.address_1 %></td>
        <td><%= order.address_2 %></td>
        <td><%= order.town_city %></td>
        <td><%= order.post_code %></td>
        <td><%= order.phone %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

